{
  "app-id": "net.sourceforge.dmidiplayer",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "dmidiplayer",
  "rename-icon": "dmidiplayer",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.3.1/drumstick-2.3.1.tar.bz2",
          "sha256": "d0350598bf2c89fc5b0bbf360984f87a87b89b592af13d6d12cdd8372f2242e7"
        }
      ]
    },
    {
      "name": "uchardet",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_STATIC=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.7.tar.xz",
          "sha256": "3fc79408ae1d84b406922fa9319ce005631c95ca0f34b205fad867e8b30e45b1"
        }
      ]
    },
    {
      "name": "dmidiplayer",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_DOCS=OFF"
      ],
      "post-install": [
        "install -Dm644 -t /app/share/metainfo/ net.sourceforge.dmidiplayer.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/dmidiplayer/v1.5.0/dmidiplayer-1.5.0.tar.bz2",
          "sha256": "810bafc2cbdfb7d3f0faf871462ffb4af0fc58331631cad8a71f58e29716544e"
        },
        {
          "type": "patch",
          "path": "0001-optional-pandoc-at-build-time.patch"
        }
      ]
    }
  ]
}
