{
  "app-id": "net.sourceforge.dmidiplayer",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.6",
  "sdk": "org.kde.Sdk",
  "command": "dmidiplayer",
  "rename-icon": "dmidiplayer",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "sonivox",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/pedrolcl/sonivox/archive/v3.6.12.tar.gz",
          "sha256": "23a7f29c617e791dfcb50b75eef41464e4bf3fca15b19da395a64373ff5d8456"
        }
      ]
    },
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON", 
        "-DBUILD_FILE=ON", 
        "-DBUILD_RT=ON", 
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.9.0/drumstick-2.9.0.tar.gz",
          "sha256": "b2692d3f96a1537ecf3a81dcad5c88ff700fc0af400dc2570cce19cb6cd1023a"
        }
      ]
    },
    {
      "name": "uchardet",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_STATIC=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.8.tar.xz",
          "sha256": "e97a60cfc00a1c147a674b097bb1422abd9fa78a2d9ce3f3fdcc2e78a34ac5f0"
        }
      ]
    },
    {
      "name": "dmidiplayer",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/dmidiplayer/v1.7.2/dmidiplayer-1.7.2.tar.gz",
          "sha256": "88aca1ba55ccc4e709a6e307d76567b3851d9b51153f6a68d4398a62d79da0ca"
        }
      ]
    }
  ]
}
