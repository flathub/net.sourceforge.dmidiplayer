{
  "app-id": "net.sourceforge.dmidiplayer",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15-21.08",
  "sdk": "org.kde.Sdk",
  "command": "dmidiplayer",
  "rename-icon": "dmidiplayer",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON", 
        "-DBUILD_FILE=ON", 
        "-DBUILD_RT=ON", 
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.5.0/drumstick-2.5.0.tar.bz2",
          "sha256": "8709d8a7c438c1d09091827ce5fd8286d387a046a8f717a1a34546d9ca3d902a"
        }
      ]
    },
    {
      "name": "uchardet",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_STATIC=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.7.tar.xz",
          "sha256": "3fc79408ae1d84b406922fa9319ce005631c95ca0f34b205fad867e8b30e45b1"
        }
      ]
    },
    {
      "name": "dmidiplayer",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_DOCS=OFF"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/dmidiplayer/v1.5.3/dmidiplayer-1.5.3.tar.bz2",
          "sha256": "8f6ac971f97a25f4dfb4272eac578c886fc41f58a1681e4cb23e9ef70f07ab56"
        }
      ]
    }
  ]
}
