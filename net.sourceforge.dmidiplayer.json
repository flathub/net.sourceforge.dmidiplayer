{
  "app-id": "net.sourceforge.dmidiplayer",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.2",
  "sdk": "org.kde.Sdk",
  "command": "dmidiplayer",
  "rename-icon": "dmidiplayer",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "/share/gtk-doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/fluidsynth2.json",
    {
        "name": "qt6-qt5compat",
        "buildsystem": "cmake-ninja",
        "sources": [
            {
                "type": "archive",
                "url": "https://download.qt.io/official_releases/qt/6.2/6.2.4/submodules/qt5compat-everywhere-src-6.2.4.tar.xz",
                "sha256": "5de2b9e25bf7de161fbb88ecdd468ed1788bc899392fc05ed80aa590ebb352fa"
            },
            {
                "type": "patch",
                "path": "install_libdir.patch"
            }
        ]
    },
    {
      "name": "drumstick",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_ALSA=ON", 
        "-DBUILD_FILE=ON", 
        "-DBUILD_RT=ON", 
        "-DBUILD_WIDGETS=ON",
        "-DBUILD_DOCS=OFF",
        "-DBUILD_UTILS=OFF",
        "-DBUILD_TESTING=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/plugins",
        "/lib/pkgconfig",
        "/share/mime",
        "/share/icons/hicolor/*/apps",
        "*.desktop",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/drumstick/2.6.0/drumstick-2.6.0.tar.bz2",
          "sha256": "f2bf804b97a63f001b28eedebc87897756e222ea1fa16f26ef244fe2695ce98a"
        }
      ]
    },
    {
      "name": "uchardet",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_STATIC=OFF"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share",
        "/lib/*.so"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.7.tar.xz",
          "sha256": "3fc79408ae1d84b406922fa9319ce005631c95ca0f34b205fad867e8b30e45b1"
        }
      ]
    },
    {
      "name": "dmidiplayer",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DBUILD_DOCS=OFF" ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/dmidiplayer/v1.6.0/dmidiplayer-1.6.0.tar.bz2",
          "sha256": "81baac7f438e071481d9bdfc6ebcaa23e73117dba1142a70a1077a29e6deff5c"
        },
        {
          "type": "patch",
          "path": "0001-fixed-appstream-metainfo.patch"
        }
      ]
    }
  ]
}
